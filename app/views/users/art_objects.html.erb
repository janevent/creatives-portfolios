<h1><%=@user.artist_name%></h1>
<h3><%=@user.email%></h3>
<%@art_objects.each do |art_object|%>
    <h2><%=art_object.title%></h2>
    <%if art_object.image != nil%>
        <p><img src="<%=URI.escape(art_object.image)%>" alt="<%=art_object.title%>" style="max-width: 100%;"/></p>
    <%end%>
    <p><%=art_object.date%></p>
    <%if session[:user_id] == @user.id %>
        <p><a href="/art_objects/<%=art_object.id%>">View Show Page</a></p>
    <%end%>
    <%if art_object.form != ""%>
        <p>Medium: <%=art_object.form%></p>
    <%end%>
    <%if art_object.description != "" %>
        <p>Description: <%=art_object.description%></p>
    <%end%>
<%end%>
<br>
<a href="/users/<%=@user.id%>">View Artist's Profile</a>
<br>
<a href="/users">Back to List of Artists</a>
<br>
<%if !logged_in? %>
<a href="/users/login">Log In</a>
<%end%>
<br>
<%if !!logged_in? %>
<a href="/users/login">Log Out</a>
<%end%>